<!-- miniprogram/pages/notice/notice.wxml -->
<form bindsubmit="formSubmit" bindreset="formReset">
<view class="weui-cells__title">请输入标题</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
            <input name="biaohao" class="weui-input" placeholder="请输入标题" />
        </view>
    </view>
</view>
<view class="weui-cells__title">正文</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
        <view class="weui-cell__bd">
            <textarea name="content" class="weui-textarea" placeholder="请输入文本" style="height: 3.3em" />
            <view class="weui-textarea-counter">0/200</view>
        </view>
    </view>
</view>
<button form-type="submit" class="weui-btn" type="primary">提交</button>
</form>